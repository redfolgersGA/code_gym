<%= render 'header' %>
<div id='container'>

<% @users.each do |user| %>
	<%= make_full_name(user['first_name'],user['last_name']) %><br>
	<a href='/users/<%= user['id'] %>'>View <%= user['first_name'] %>'s projects</a>
	<%= link_to 'Remove User', user, method: :delete %><br>
	<hr>
<% end %>

<form action='/users' method='POST'>
	<h2>Add a user:</h2>
	<label>First Name</label><br>
		<input name='first'><br>
	<label>Last Name</label><br>
		<input name='last'><br>
	<label>E-Mail</label><br>
		<input name='email'><br>
	<label>Age</label><br>
		<input name='age'><br>
	<button>Submit</button>
</form>

</div>
<%= render 'footer' %>